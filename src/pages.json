/* --------------------- pages.json 文件用来对 uni-app 进行全局配置 -------------------- */
/* ------------------- 决定页面文件的路径、窗口样式、原生的导航栏、底部的原生tabbar 等 ------------------ */
{
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页"
      }
    },
    {
      "path": "pages/pinia/index",
      "style": {
        "navigationBarTitleText": "状态管理工具（pinia）"
      }
    },
    {
      "path": "pages/axios/index",
      "style": {
        "navigationBarTitleText": "Axios（网络请求示例）"
      }
    },
    {
      "path": "pages/uview/index",
      "style": {
        "navigationBarTitleText": "uView 示例组件"
      }
    },
    {
      "path": "pages/unocss/index",
      "style": {
        "navigationBarTitleText": "UnoCSS 示例"
      }
    },
    {
      "path": "pages/test1/index",
      "style": {
        "navigationBarTitleText": "test1示例"
      }
    },
    {
      "path": "pages/test2/index",
      "style": {
        "navigationBarTitleText": "test2示例"
      }
    },
    {
      "path": "pages/home/home",
      "style": {
        "navigationBarTitleText": "首页"
      }
    }
    
  ],
  // 设置默认页面的窗口表现
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  //组件自动引入规则
  "easycom": {
    "custom": {
			// "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      "^u-(.*)": "vk-uview-ui/components/u-$1/u-$1.vue"
    }
  },
  //设置底部 tab 的表现,注意不能为空,下面就有问题
  // "tabBar": {}
  "tabBar": {
    "color": "#7A7E83",
    "selectedColor": "#3cc51f",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "position":"bottom",
    "iconWidth": "24px",
    "list": [
      {
        // 坑: tabBar 第一项要和pages 第一项保持一致, 不然不显示
        "pagePath": "pages/index/index",
        "iconPath": "./static/images/home.png",
        "selectedIconPath": "./static/images/home-filled.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/test2/index",
        "iconPath": "./static/images/setting.png",
        "selectedIconPath": "./static/images/setting-filled.png",
        "text": "当前设备"
      }
    ]
  }
}
